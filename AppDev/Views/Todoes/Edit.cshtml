@using WebApplication2.Enums
@using AppDev.ViewModels
@model TodoCategoriesViewModel

<h1>Edit a Todo</h1>
 
<form asp-controller="Todoes" asp-action="Edit" method="post">
    <input asp-for ="@Model.Todo.Id" type ="hidden" value ="@Model.Todo.Id" />
    <div class="form-group">
        <label>Description</label>
         <input asp-for="Todo.Description" placeholder="Insert Description"/>
        </div>
    <div class="form-group">
        <label>Status</label>
        <select asp-for="Todo.Status" asp-items="Html.GetEnumSelectList<TodoStatus>()">
            <option selected ="selected" value="" class="form-control">Todo</option>
        </select>
    </div>
     <div class="form-group">
    <label>Category</label>
      <select 
        asp-for="Todo.CategoryId" 
        asp-items="@(new SelectList(Model.Categories, "Id", "Description"))" 
        class="form-control">
      </select>
  </div>
      <div class="form-group">
         <button type="submit" class="btn btn-secondary">Edit</button>
      </div>
</form>