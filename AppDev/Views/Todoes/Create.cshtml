@using AppDev.ViewModels
@model TodoCategoriesViewModel

<h1>Create a new Todo</h1>
 
<form asp-controller="Todoes" asp-action="Create" method="post">
    <div class="form-group">
        <label>Description</label>
        <br />
         <input asp-for="Todo.Description" placeholder="Insert Description"/> <br/>
         <span asp-validation-for="Todo.Description" class="text-danger"></span>
      <select 
        asp-for="Todo.CategoryId" 
        asp-items="@(new SelectList(Model.Categories, "Id", "Description"))" 
        class="form-control">
      </select>
    </div>
    <div class ="form-group">
         <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>